<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    
    <!-- Always force latest IE rendering engine or request Chrome Frame -->
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Use title if it's in the page YAML frontmatter -->
    <title>Lone Star Funds |Lone Star Funds </title>
    
    <link rel="shortcut icon" href="http://www.lonestarfunds.com/wp-content/themes/lonestarfunds/_ui/images/common/favicon.ico">
    
    <%= stylesheet_link_tag "app" , :relative => true %>
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
    <%= javascript_include_tag  "main" , :relative => true %>
    
  </head>
  
  <body class="<%= page_classes %>">
    <div class="head-img"></div>
<div class="main">
	<header>
	  <div class="header-outer">
	  	<div class="header-inner">
		<div class="site-logo">
    		<a href="/">   <%= image_tag  "../images/common/lsf-logo.png" , :relative => true %></a>      
		</div> 
		<div class="menu-link"><a class="active" href="#">MENU</a></div>
		<nav class="menu">
			<ul>
				<% data.nav.links.each do |links| %>
					<li class="<% if links.sub_menu %>has-submenu<% end %> <% if links.is_last %>blue-bar<% end %>">
						<%=link_to links.name,links.link,:class=>"desktop-link",:relative=> true%>
						<%=link_to links.mobile_name,'#',:class=>"mobile-link ion-chevron-right"%>
						<% if links.sub_menu %>
							<ul class="sub-menu">
							     <li class="back-link"><a>Back</a></li>
							    <li class="sub-top-link"><%=link_to links.name,links.link%></li>
								<% links.sub_menu.each do |sub_link| %>
									<li class="sub-back-link"><a>Back</a></li>
									<li>   
 										<%=link_to sub_link.name,sub_link.link%>
									</li>
								<% end %>
							</ul>
						<% end %>
					</li>
				<% end %>
			</ul>
		</nav>
	   </div>	
	   </div>
	</header>
	<section class="main_content" role="main">
			<%=yield%>
		</section>
	<footer>
	<div class="footer-inner">
		<div class="explore">
			<%= image_tag  "../images/common/bg_explore.png" , :relative => true %>
			<a href="http://www.lonestarfunds.com/contact-us/global-offices/" >Explore Our Locations Worldwide</a>
		</div>
		<nav class="quick-links-menu">
		<ul>
			<li><a href="http://www.lonestarfunds.com/privacy-policy/">Privacy Policy</a></li>
			<li><a href="http://www.lonestarfunds.com/terms-of-use/">Terms of Use</a></li>
			<li><a href="http://www.lonestarfunds.com/contact-us/">Contact Info</a></li>
		</ul>
		</nav>
		<div class="copyright">
		 ©2012–2014, Lone Star Funds, All rights reserved.
	</div>
	</div>
	
	</footer>
</div>
  </body>
</html>